----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
1) First code  of express.js


const express = require('express');
const app = express();

app.get("/",(req,res)=>{
    res.send("hello from express");
})

app.get("/about",(req,res)=>{
    res.send("Hello from About page");
})

app.listen(8000,()=>{
    console.log("listening on port 8000");
})


